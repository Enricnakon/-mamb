<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Upload</title>
    
</head>



<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }
    .container {
        max-width: 1000px;
        margin: 20px auto;
        padding: 25px;
    }
    h1 {
        text-align: center;
    }
    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: -20px;
        /* Negative margin to counteract margin-bottom on .card */
    }
    .card {
        width: calc(20% - 20px);
        margin-bottom: 20px;
        padding: 35px;
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
    h2 {
        margin-top: 0;
        color: #333;
    }
    p {
        margin: 5px 0;
        color: #666;
    }
    .image-container {
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto; /* Enable horizontal scrolling if needed */
    }
    .image-container img {
        max-width: 100px; /* Adjust the width of each image */
        height: auto;
        margin-right: 10px; /* Adjust the spacing between images */
        border-radius: 4px;
    }
    .btn {
        display: inline-block;
        padding: 8px 12px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }
    .btn:hover {
        background-color: #0056b3;
    }


.navbar {
    background-color: #922f11; /* Navbar background color */
    padding: 5px 10px; /* Adjust navbar padding */
}

.navbar-brand {
    color: #ffffff; /* Navbar brand color */
    font-weight: bold;
    font-size: 1.5rem; /* Adjust navbar brand font size */
}

.nav-link {
    color: #ffffff; /* Navbar link color */
    padding: 5px 10px; /* Adjust navbar link padding */
    font-size: 1rem; /* Adjust navbar link font size */
}

.nav-link:hover {
    color: #ffffff; /* Navbar link color on hover */
}


</style>
 



    

  



<body>
     
















 
    <nav class="navbar">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/viewFormData">
                <i class="fas fa-eye"></i> 
           
            
       
                <i class="fas fa-edit"></i> Edit
            </a> <!-- Icon for editing -->
            
    
    
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/link2">Link 2</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/link3">Link 3</a>
          </li>
        </ul>
      </nav>
      
    <br>















    <div class="container">
        <h1>Product Upload</h1>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="card">
                    <h2><%= product.productName %></h2>
                    <p>Description: <%= product.description %></p>
                    <p>Price: <%= product.price %></p>
                    <p>Category: <%= product.category %></p>
                    <p>subCategory: <%= product.subCategory %></p>



                 
                    <p>Created By: <%= product.createdBy %></p>
                    <div class="image-container">
                        <% product.productImages.slice(0, 3).forEach(image => { %>
                            <img src="/images/<%= image %>" alt="Product Image">
                        <% }); %>
                    </div>
                    
                    <div>
                        <a href="/editproduct/<%= product.id %>" class="btn">Edit</a>
                        <form action="/delete/<%= product.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
