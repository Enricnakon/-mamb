<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Form Data</title>
 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> <!-- Font Awesome -->
    
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>




<style> 
 .navbar {
    background-color: #922f11; /* Navbar background color */
    padding: 5px 10px; /* Adjust navbar padding */
}

.navbar-brand {
    color: #ffffff; /* Navbar brand color */
    font-weight: bold;
    font-size: 1.5rem; /* Adjust navbar brand font size */
}

.nav-link {
    color: #ffffff; /* Navbar link color */
    padding: 5px 10px; /* Adjust navbar link padding */
    font-size: 1rem; /* Adjust navbar link font size */
}

.nav-link:hover {
    color: #ffffff; /* Navbar link color on hover */
}</style>
<body>

    <nav class="navbar">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/viewFormData">
                <i class="fas fa-eye"></i> 
           
            
       
                <i class="fas fa-edit"></i> Edit
            </a> <!-- Icon for editing -->
            

 
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/link2">Link 2</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/link3">Link 3</a>
          </li>
        </ul>
      </nav>
      



    
<div class="container">
    <h2>View Form Data</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% formData.forEach(data => { %>
                <tr>
                    <td><%= data.description %></td>
                    <td><img src="/images/<%= data.image %>" alt="Image" style="max-width: 200px;"></td>
                    <td>
                        <a href="/form/edit/<%= data._id %>" class="btn btn-primary">Edit</a>
                        <form action="/form/delete/<%= data._id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Form for editing form data -->
     

</body>
</html>