        $(document).ready(function () {
            // Search functionality
            $('#searchButton').click(function () {
                const searchQuery = $('#searchInput').val();
                const category = $('#categorySelect').val();
                window.location.href = `/view/admin_dashboard?search=${searchQuery}&category=${category}`;
            });

            // Category selection
            $('#categorySelect').change(function () {
                const category = $(this).val();
                window.location.href = `/view/admin_dashboard?category=${category}`;
            });
        });



        
  // Add event listener to delete buttons
  document.querySelectorAll('.delete-btn').forEach(button => {
    button.addEventListener('click', function(event) {
      event.preventDefault(); // Prevent default form submission
      const orderId = this.getAttribute('data-order-id');
      const confirmation = confirm('Are you sure you want to delete this order?');
      if (confirmation) {
        // Submit form for deletion
        document.getElementById(`deleteForm-${orderId}`).submit();
      }
    });
  });
</script>

