    <main role="main" class="container mt-5">
        <!-- Product Management Section -->
        <section id="product-management">
            <h2>Product Management</h2>
            <!-- Search bar -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search products" aria-label="Search products" aria-describedby="basic-addon2" id="searchInput">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="searchButton">Search</button>
                </div>
            </div>

            <!-- Category selection -->
            <div class="form-group">
                <label for="categorySelect">Select category:</label>
                <select class="form-control" id="categorySelect">
                    <option value="">All categories</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category %>"><%= category %></option>
                    <% }); %>
                </select>
            </div>
            <div class="text-center mt-4">
                <a href="/view/form" class="btn btn-success">Add New Product</a>
            </div>   <br>
            <!-- Display list of products with options to edit or delete -->
            <div class="row" id="productList">
                <% products.forEach(product => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="<%= product.imageUrl %>" class="card-img-top product-image" alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.productName %></h5>
                                <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.productName %>">
                                <p class="card-text">Description: <%= product.description %></p>
                                <p class="card-text">Price: $<%= product.price %></p>
                                <!-- Add buttons to edit or delete product -->
                                <button class="btn btn-primary mr-2">Edit</button>
                                <button class="btn btn-danger">Delete</button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

           
            
        </section>









        <h1>Admin Dashboard</h1>

        <% if (orders.length > 0) { %>
            <% orders.forEach((order, index) => { %>
                <div class="order-card">
                    <div class="customer-details">
                        <h2>Customer Details:</h2>
                        <p>Name: <%= order.name %></p>
                        <p>Phone: <%= order.phone %></p>
                        <p>Email: <%= order.email %></p>
                    </div>
                    <h3>Order Items:</h3>
                    <ul class="items-list">
                        <% order.cartItems.forEach(item => { %>
                            <li class="item">
                                <h4>Product ID: <%= item.productId %></h4>
                                <p>Product Name: <%= item.productName %></p>
                                <p>Price: <%= item.price %></p>
                                <p>Quantity: <%= item.quantity %></p>
                            </li>
                        <% }) %>
                    </ul>
                    <h4>Total Price: <%= order.totalPrice %></h4>
                </div>
                <% if ((index + 1) % 4 === 0) { %>
                    <div style="clear:both;"></div> <!-- Clear float after every fourth card -->
                <% } %>
            <% }) %>
        <% } else { %>
            <p>No orders found.</p>
        <% } %>
    





