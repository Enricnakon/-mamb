<body>
    <nav class="navbar">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/viewFormData">
                <i class="fas fa-eye"></i> 
           
            
       
                <i class="fas fa-edit"></i> Edit
            </a> <!-- Icon for editing -->
            

 
            </a>
